option_settings:
  aws:elasticbeanstalk:application:environment:
    # Database configuration
    DB_HOST: learning-cards-aurora-cluster.cluster-c96giu4881ke.eu-central-1.rds.amazonaws.com
    DB_PORT: 5432
    DB_NAME: learningcards
    DB_USER: postgres
    DB_PASSWORD: learning123!
    
    # S3 configuration
    S3_BUCKET_NAME: m3-cas1
    
    # Ktor configuration
    KTOR_ENV: aws
    KTOR_CONFIG_FILE: application-aws.yaml
    
    # JVM settings for Ktor
    JVM_OPTS: "-Xmx1024m -Xms512m"
    
  # Java platform configuration
  aws:elasticbeanstalk:container:java:
    JvmOptions: "-Xmx1024m -Xms512m -Dfile.encoding=UTF-8"
    
  # Instance configuration
  aws:autoscaling:launchconfiguration:
    InstanceType: t3.medium
    
  # Application port configuration
  aws:elasticbeanstalk:application:
    Application Healthcheck URL: /health